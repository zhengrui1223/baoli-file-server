<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baoli.mapper.UploadFileInfoMapper">
    <resultMap id="BaseResultMap" type="com.baoli.model.UploadFileInfo" >
        <id column="id" property="id"/>
        <result column="file_name" property="fileName"/>
        <result column="file_path" property="filePath"/>
        <result column="group_name" property="groupName"/>
        <result column="store_path" property="storePath"/>
        <result column="image_type" property="imageType"/>
        <result column="file_size" property="fileSize"/>
        <result column="create_user" property="createUser"/>
        <result column="create_date" property="createDate"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_date" property="updateDate"/>
        <result column="valid" property="valid"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id, file_name, file_path, file_size, group_name, store_path, image_type, create_user, create_date, update_user, update_date, valid
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM upload_file_info
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM upload_file_info
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.baoli.model.UploadFileInfo" >
        INSERT INTO
        upload_file_info
        (file_name, file_path, file_size, group_name, store_path, image_type, create_user, create_date, update_user, update_date, valid)
        VALUES
        (#{fileName}, #{filePath}, #{fileSize}, #{groupName}, #{storePath}, #{imageType}, #{createUser}, NOW(), #{updateUser}, #{updateDate}, 1)
    </insert>

    <update id="update" useGeneratedKeys="true" keyProperty="id" parameterType="com.baoli.model.UploadFileInfo" >
        UPDATE
        upload_file_info
        SET
        <if test="fileName != null">file_name = #{fileName},</if>
        <if test="filePath != null">file_path = #{filePath},</if>
        <if test="valid != null">valid = #{valid}</if>
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer" >
        DELETE FROM
        upload_file_info
        WHERE
        id =#{id}
    </delete>
</mapper>